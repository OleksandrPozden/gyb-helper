{
    "manifest_version": 3,
    "name": "GYB-helper",
    "version": "0.1.0",
    "description": "GYB-helper helps to start initiate a chat with lifetime customers",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs"
    ],
    "action": {
        "default_title": "gyb-helper",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "image1.jpg",
            "48": "image1.jpg",
            "128": "image1.jpg"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://my.livechatinc.com/traffic/*", "http://my.livechatinc.com/traffic/*", "http://127.0.0.1:5500/test.html"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ]

  }  